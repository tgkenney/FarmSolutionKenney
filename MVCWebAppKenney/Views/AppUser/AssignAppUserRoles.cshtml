
@{
    ViewData["Title"] = "Assign Roles";
}

<h1>@ViewData["Title"]</h1>
<form asp-action="AssignAppUserRoles" method="post">
    <div class="form-group">
        <label> Users </label>
        <select name="ddlAppUsers" asp-items="ViewBag.AppUsers" class="form-control" id="usersTarget">
            <option value="None"> None </option>
        </select>
    </div>
    <div id="wrapper">
        <div class="form-group" style="float:left; width:50%">
            <label> Current Roles </label>
            <div id="currentRolesTarget"></div>
            <input type="submit" name="submitButton" value="RemoveRoles" class="btn btn-primary" />
        </div>
        <div class="form-group" style="float:left; width:50%">
            <label> Available Roles </label>
            <div id="availableRolesTarget"></div>
            <input type="submit" name="submitButton" value="AddRoles" class="btn btn-primary" />
        </div>
    </div>
</form>

@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/js/CheckBoxListUserRoles.js" type="text/javascript"></script>
}
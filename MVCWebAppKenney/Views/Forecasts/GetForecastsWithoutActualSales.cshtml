@model IEnumerable<Forecast>

@{
    ViewData["Title"] = "Forecasts without actual sales";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="UpdateMultipleForecasts" method="post">

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Crop Name</th>
                <th>Classification Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Demand Forecast</th>
                <th>Actual Sales</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Forecast eachForecast in Model)
            {
                <tr>
                    <td>@eachForecast.Crop.CropName</td>
                    <td>@eachForecast.Crop.Classification.ClassificationName</td>
                    <td>@eachForecast.StartDate.ToShortDateString()</td>
                    <td>@eachForecast.EndDate.ToShortDateString()</td>
                    <td>@eachForecast.ForecastAmount</td>
                    <td><input type="text" name="actualSales"/></td>
                    <input type="hidden" name="forecastID" value="@eachForecast.ForecastID"/>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-default">Update</button>

</form>
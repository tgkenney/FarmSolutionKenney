@model CropYield
@{
    ViewData["Title"] = "Edit Crop Yield";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="AddCropYield" method="post">

    @Html.HiddenFor(m => m.CropYieldID)
    <div class="form-group">
        <label>Choose a Crop</label>
        <select asp-for="CropID" class="form-control" asp-items="ViewBag.CropList"></select>
    </div>
    <div class="form-group">
        <label>Choose a Farm</label>
        <select asp-for="FarmID" class="form-control" asp-items="ViewBag.FarmList"></select>
    </div>
    <div class="form-group">
        <label>Production Amount</label>
        <input asp-for="ProductionAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label>Production Year</label>
        <input asp-for="ProductionYear" class="form-control" />
    </div>

    <button type="submit" class="btn btn-default">Edit Crop Yield</button>

</form>